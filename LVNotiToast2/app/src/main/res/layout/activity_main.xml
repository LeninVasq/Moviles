<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    >

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo" />

    <Button
        android:id="@+id/btnPorDefecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnDefecto"
        android:text="@string/toast_por_defecto" />

    <Button
        android:id="@+id/btnGravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnGravity"
        android:text="@string/toast_por_defect_gravity" />

    <Button
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnPersonalizado"
        android:text="@string/toast_personalizado" />
</LinearLayout>